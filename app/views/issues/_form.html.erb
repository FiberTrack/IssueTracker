<%= form_with(model: issue) do |form| %>
  <% if issue.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(issue.errors.count, "error") %> prohibited this issue from being saved:</h2>

      <ul>
        <% issue.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <br>

  <div class="formulario">
  <%= form.label :subject, style: "display: block" %>
  <%= form.text_field :subject %>


  <%= form.label :description, style: "display: block" %>
  <%= form.text_area :description %>

  <%= form.label :assign, style: "display: block" %>
  <%= form.text_field :assign %>

  <%= form.submit class: "crear-issue"%>
  <%= link_to "Back to issues", issues_path, class: "volver" %>

</div>
<% end %>
